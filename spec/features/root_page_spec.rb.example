require "spec_helper"

describe "Root page", type: :feature do
  describe "required elements" do
    context "one by one" do
      before(:each) { visit "/" }
      it { expect(page).to have_title("ПОКУПОН — все СКИДКИ и АКЦИИ 2018 — купоны на скидку — Киев") }
      it { expect(page).to have_link("Войти") }
    end

    context "all in one" do
      it do
        visit "/"
        expect(page).to have_title("ПОКУПОН — все СКИДКИ и АКЦИИ 2018 — купоны на скидку — Киев")
        expect(page).to have_link("Войти")
      end
    end
  end
end
